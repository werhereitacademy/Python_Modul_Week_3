def quitTaskMenu():
    quit()
    #sys.exit()           #for this code You must call the sys module.


def taskMenu():

    while True :
        
        

        print(
            """

        1. Add to task
        2. Comlete to task
        3. Delelete to task
        4. List to task
        5. Quit
            
            """)
        choice = int(input(" Enter your choice : "))


        if choice == 1 :
            addTask()


        elif choice == 2 :
            completeTask()


        elif choice == 3:
            delTask()


        elif choice ==4 :
            print("-"*170)
            listTask()


        elif choice == 5:
            quitTaskMenu()


        else :
            
            print(f" Please select the correct entry option:\nLet it be between 1 and 5\n")


if __name__ == "__main__" :
   taskMenu()
        
        
